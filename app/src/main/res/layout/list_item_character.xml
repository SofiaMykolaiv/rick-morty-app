<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.rick_morty_app.presentation.model.CharacterModel" />

        <variable
            name="clickListener"
            type="com.example.rick_morty_app.presentation.listener.CharacterClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_half"
        android:layout_marginEnd="@dimen/spacing_default"
        android:layout_marginBottom="@dimen/spacing_half"
        android:background="@drawable/background_character"
        android:onClick="@{()-> clickListener.onItemClick(model)}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="@dimen/image_size_item_character"
            android:layout_height="@dimen/image_size_item_character"
            android:src="@drawable/pics_test"
            tools:ignore="ContentDescription"
            tools:scaleType="center"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_quarter"
            android:orientation="vertical">

            <TextView
                android:id="@+id/character_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold"
                tools:text="Taras Koloshmatin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/model(model.status,model.species)}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small"
                tools:text="Human-Dead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_half"
                android:text="@string/last_known_location"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.origin.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="Earth(C-173)" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_half"
                android:text="@string/gender"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.gender}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                tools:text="Male" />
        </LinearLayout>
    </LinearLayout>
</layout>